<?xml version="1.0" encoding="UTF-8" ?>
<root>

	<stackpanel margin="10" orientation="horizontal" cells="2">
		<celldefinitions>
			<cell index="0" sizepolicy="content" />
		</celldefinitions>
	
		<stackpanel cell="0" orientation="vertical" cells="3">
			<celldefinitions>
				<cell index="0" sizepolicy="content" />
				<cell index="2" sizepolicy="content" />
			</celldefinitions>
			
			<stackpanel margin="10" cell="2" cells="8" orientation="vertical">
			
				<text name="text_selectCountry" content="{localization/infoText_selectCountry}" cell="7" />
				<text name="text_selectCountryAgain" content="{localization/infoText_selectCountryAgain}" cell="6" fontsize="14" visible="false" />
				
				<button name="button_makeBanks" cell="5" text="Banks" />
				<button name="button_makePolitics" cell="4" text="Politics" />
				<button name="button_makeConcerns" cell="3" text="Concerns" />
				<button name="button_makeMedia" cell="2" text="Media" />
				<button name="button_makeControl" cell="1" text="Control" />
				
				<text name="text_countryInfo" content="" cell="0" fontsize="14" outlinecolor="0.0, 0.0, 0.0, 1.0" />
				
			</stackpanel>
			
			<text name="text_dayProgress" content="{localization/infoText_day}" cell="0" fontsize="32" visible="false" margin="0,0,0,30" />
			
		</stackpanel>
	
	</stackpanel>

</root>