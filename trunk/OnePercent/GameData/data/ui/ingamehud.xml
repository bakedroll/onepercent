<?xml version="1.0" encoding="UTF-8" ?>
<root>

	<stackpanel margin="10" orientation="horizontal" cells="3">
		<celldefinitions>
			<cell index="0" sizepolicy="content" />
			<cell index="2" sizepolicy="content" />
		</celldefinitions>
	
		<stackpanel cell="0" orientation="vertical" cells="3">
			<celldefinitions>
				<cell index="0" sizepolicy="content" />
				<cell index="2" sizepolicy="content" />
			</celldefinitions>
			
			<stackpanel margin="10" cell="0" orientation="vertical">
			
				<text name="text_selectCountry" content="{localization/infoText_selectCountry}" />
				<text name="text_selectCountryAgain" content="{localization/infoText_selectCountryAgain}" fontsize="14" visible="false" />
				
				<button name="button_makeBanks" text="Banks" />
				<button name="button_makePolitics" text="Politics" />
				<button name="button_makeConcerns" text="Concerns" />
				<button name="button_makeMedia" text="Media" />
				<button name="button_makeControl" text="Control" />
				
				<text name="text_countryInfo" content="" fontsize="14" outlinecolor="0.0, 0.0, 0.0, 1.0" />
				
			</stackpanel>
			
			<text name="text_dayProgress" content="{localization/infoText_day}" cell="2" fontsize="32" visible="false" margin="0,0,0,30" />
			
		</stackpanel>
		
		<stackpanel cell="2" orientation="vertical" margin="10" sizepolicy="content" name="panel_skillbuttons" />
	
	</stackpanel>

</root>